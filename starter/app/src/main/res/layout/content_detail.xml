<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/content_detail_scene"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailActivity"
    tools:showIn="@layout/activity_detail">

    <TextView
        android:id="@+id/download_option_label"
        style="@style/Base.Widget.AppCompat.TextView.Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Option: " />


    <TextView
        android:id="@+id/download_option"
        style="@style/Base.Widget.AppCompat.TextView.Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/download_status_label"
        style="@style/Base.Widget.AppCompat.TextView.Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: " />

    <TextView
        android:id="@+id/download_status"
        style="@style/Base.Widget.AppCompat.TextView.Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/cloud_done_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_cloud_done_24" />

</androidx.constraintlayout.motion.widget.MotionLayout>